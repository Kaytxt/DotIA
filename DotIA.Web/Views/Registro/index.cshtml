@model DotIA.Web.Controllers.RegistroRequestWeb
@{
    ViewData["Title"] = "DotIA - Cadastro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-purple: #8d4bff;
            --secondary-purple: #a855f7;
            --dark-bg: #1a132f;
            --darker-bg: #140e25;
            --card-bg: #2c204d;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            background: var(--dark-bg);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at 20% 50%, rgba(141, 75, 255, 0.15) 0%, transparent 50%),
                        radial-gradient(circle at 80% 80%, rgba(168, 85, 247, 0.15) 0%, transparent 50%);
            animation: gradient 15s ease infinite;
        }

        @@keyframes gradient {
            0%, 100% { transform: translate(0, 0); }
            50% { transform: translate(-50px, 50px); }
        }

        .registro-wrapper {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 550px;
            padding: 20px;
            max-height: 95vh;
            overflow-y: auto;
        }

        .registro-wrapper::-webkit-scrollbar {
            width: 6px;
        }

        .registro-wrapper::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
        }

        .registro-wrapper::-webkit-scrollbar-thumb {
            background: var(--primary-purple);
            border-radius: 10px;
        }

        .card {
            background: linear-gradient(135deg, var(--card-bg) 0%, var(--darker-bg) 100%);
            border: 1px solid rgba(141, 75, 255, 0.3);
            border-radius: 30px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);
        }

        .logo-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto;
            background: linear-gradient(135deg, var(--primary-purple), var(--secondary-purple));
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            box-shadow: 0 10px 30px rgba(141, 75, 255, 0.4);
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .logo-title {
            font-size: 36px;
            font-weight: 800;
            background: linear-gradient(135deg, var(--secondary-purple), #ec4899);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
            margin: 15px 0 5px;
        }

        .logo-subtitle {
            color: #9ca3af;
            text-align: center;
            font-size: 15px;
            margin-bottom: 25px;
        }

        .form-label {
            color: #e5e7eb;
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-control, .form-select {
            background: var(--darker-bg);
            border: 2px solid rgba(141, 75, 255, 0.3);
            border-radius: 15px;
            color: #e5e7eb;
            padding: 12px 20px;
            transition: all 0.3s;
        }

        .form-control:focus, .form-select:focus {
            background: var(--darker-bg);
            border-color: var(--primary-purple);
            color: #e5e7eb;
            box-shadow: 0 0 0 4px rgba(141, 75, 255, 0.1);
        }

        .form-control::placeholder {
            color: #6b7280;
        }

        .form-select {
            cursor: pointer;
        }

        .form-select option {
            background: var(--darker-bg);
            color: #e5e7eb;
        }

        .input-icon-wrapper {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 18px;
            z-index: 10;
            color: #9ca3af;
        }

        .password-toggle:hover {
            color: var(--primary-purple);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-purple), var(--secondary-purple));
            border: none;
            border-radius: 15px;
            padding: 14px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 10px 30px rgba(141, 75, 255, 0.3);
            transition: all 0.3s;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(141, 75, 255, 0.5);
        }

        .btn-outline-secondary {
            border: 2px solid rgba(141, 75, 255, 0.3);
            color: #e5e7eb;
            border-radius: 15px;
            padding: 14px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-outline-secondary:hover {
            background: rgba(141, 75, 255, 0.1);
            border-color: var(--primary-purple);
            color: var(--primary-purple);
        }

        .alert-danger {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(220, 38, 38, 0.2));
            border: 1px solid rgba(239, 68, 68, 0.5);
            color: #fecaca;
            border-radius: 15px;
        }

        .alert-success {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(5, 150, 105, 0.2));
            border: 1px solid rgba(16, 185, 129, 0.5);
            color: #6ee7b7;
            border-radius: 15px;
        }

        .link-purple {
            color: var(--secondary-purple);
            text-decoration: none;
            transition: all 0.3s;
        }

        .link-purple:hover {
            color: var(--primary-purple);
        }

        .footer-text {
            color: #6b7280;
            font-size: 13px;
        }

        .password-strength {
            height: 4px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            margin-top: 8px;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            transition: all 0.3s;
            border-radius: 10px;
        }

        .strength-weak { width: 33%; background: #ef4444; }
        .strength-medium { width: 66%; background: #fbbf24; }
        .strength-strong { width: 100%; background: #10b981; }

        @@media (max-width: 600px) {
            .registro-wrapper {
                padding: 15px;
            }

            .card {
                padding: 25px 15px !important;
            }

            .logo-icon {
                width: 70px;
                height: 70px;
                font-size: 35px;
            }

            .logo-title {
                font-size: 32px;
            }
        }
    </style>
</head>
<body>
    <div class="registro-wrapper">
        <div class="card p-4">
            <div class="card-body">
                <!-- Logo -->
                <div class="logo-icon mb-3">🤖</div>
                <h1 class="logo-title">Criar Conta</h1>
                <p class="logo-subtitle">Preencha os dados abaixo para se cadastrar</p>

                <!-- Mensagem de Erro -->
                @if (ViewBag.Erro != null)
                {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @ViewBag.Erro
                </div>
                }

                <!-- Formulário -->
                <form method="post" asp-action="Registrar" id="formRegistro">
                    <!-- Nome -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-person"></i> Nome Completo
                        </label>
                        <input type="text"
                               class="form-control"
                               id="nome"
                               name="nome"
                               placeholder="Digite seu nome completo"
                               required
                               autofocus
                               value="@Model?.Nome">
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-envelope"></i> Email
                        </label>
                        <input type="email"
                               class="form-control"
                               id="email"
                               name="email"
                               placeholder="seu@@email.com"
                               required
                               value="@Model?.Email">
                    </div>

                    <!-- Departamento -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-building"></i> Departamento
                        </label>
                        <select class="form-select"
                                id="idDepartamento"
                                name="idDepartamento"
                                required>
                            <option value="">Selecione seu departamento</option>
                            @if (ViewBag.Departamentos != null)
                            {
                            @foreach (var dept in ViewBag.Departamentos)
                                {
                            <option value="@dept.Id" selected="@(Model?.IdDepartamento == dept.Id)">
                                @dept.Nome
                            </option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Senha -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-lock"></i> Senha
                        </label>
                        <div class="input-icon-wrapper">
                            <input type="password"
                                   class="form-control"
                                   id="senha"
                                   name="senha"
                                   placeholder="Mínimo 6 caracteres"
                                   required
                                   minlength="6"
                                   oninput="verificarForcaSenha()">
                            <span class="password-toggle" onclick="togglePassword('senha', 'toggleIcon1')">
                                <i class="bi bi-eye" id="toggleIcon1"></i>
                            </span>
                        </div>
                        <div class="password-strength">
                            <div class="password-strength-bar" id="strengthBar"></div>
                        </div>
                        <small class="text-muted" id="strengthText"></small>
                    </div>

                    <!-- Confirmação de Senha -->
                    <div class="mb-4">
                        <label class="form-label">
                            <i class="bi bi-lock-fill"></i> Confirmar Senha
                        </label>
                        <div class="input-icon-wrapper">
                            <input type="password"
                                   class="form-control"
                                   id="confirmacaoSenha"
                                   name="confirmacaoSenha"
                                   placeholder="Digite a senha novamente"
                                   required
                                   oninput="verificarSenhasIguais()">
                            <span class="password-toggle" onclick="togglePassword('confirmacaoSenha', 'toggleIcon2')">
                                <i class="bi bi-eye" id="toggleIcon2"></i>
                            </span>
                        </div>
                        <small class="text-danger" id="senhasDiferentes" style="display: none;">
                            <i class="bi bi-exclamation-circle"></i> As senhas não coincidem
                        </small>
                    </div>

                    <!-- Botões -->
                    <button type="submit" class="btn btn-primary w-100 mb-3" id="btnCadastrar">
                        Criar Conta <i class="bi bi-check-circle"></i>
                    </button>

                    <a href="/Login" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left"></i> Voltar para o Login
                    </a>
                </form>

                <!-- Footer -->
                <div class="text-center mt-4">
                    <small class="footer-text">
                        Já tem uma conta? <a href="/Login" class="link-purple">Fazer Login</a>
                    </small>
                </div>

                <div class="text-center mt-3">
                    <small class="footer-text">
                        © 2025 DotIA. Todos os direitos reservados.
                    </small>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);

            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'bi bi-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'bi bi-eye';
            }
        }

        function verificarForcaSenha() {
            const senha = document.getElementById('senha').value;
            const strengthBar = document.getElementById('strengthBar');
            const strengthText = document.getElementById('strengthText');

            let forca = 0;
            if (senha.length >= 6) forca++;
            if (senha.length >= 8) forca++;
            if (/[A-Z]/.test(senha)) forca++;
            if (/[0-9]/.test(senha)) forca++;
            if (/[^A-Za-z0-9]/.test(senha)) forca++;

            strengthBar.className = 'password-strength-bar';

            if (forca <= 2) {
                strengthBar.classList.add('strength-weak');
                strengthText.textContent = 'Senha fraca';
                strengthText.style.color = '#ef4444';
            } else if (forca <= 3) {
                strengthBar.classList.add('strength-medium');
                strengthText.textContent = 'Senha média';
                strengthText.style.color = '#fbbf24';
            } else {
                strengthBar.classList.add('strength-strong');
                strengthText.textContent = 'Senha forte';
                strengthText.style.color = '#10b981';
            }
        }

        function verificarSenhasIguais() {
            const senha = document.getElementById('senha').value;
            const confirmacao = document.getElementById('confirmacaoSenha').value;
            const aviso = document.getElementById('senhasDiferentes');
            const btnCadastrar = document.getElementById('btnCadastrar');

            if (confirmacao.length > 0 && senha !== confirmacao) {
                aviso.style.display = 'block';
                btnCadastrar.disabled = true;
            } else {
                aviso.style.display = 'none';
                btnCadastrar.disabled = false;
            }
        }

        // Validação no envio do formulário
        document.getElementById('formRegistro').addEventListener('submit', function (e) {
            const senha = document.getElementById('senha').value;
            const confirmacao = document.getElementById('confirmacaoSenha').value;
            const departamento = document.getElementById('idDepartamento').value;

            if (!departamento) {
                e.preventDefault();
                alert('Por favor, selecione um departamento!');
                return false;
            }

            if (senha !== confirmacao) {
                e.preventDefault();
                alert('As senhas não coincidem!');
                return false;
            }

            if (senha.length < 6) {
                e.preventDefault();
                alert('A senha deve ter no mínimo 6 caracteres!');
                return false;
            }
        });
    </script>
</body>
</html>