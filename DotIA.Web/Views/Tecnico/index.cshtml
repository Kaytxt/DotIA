@{
    ViewData["Title"] = "DotIA - Painel do Técnico";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        :root {
            --primary-green: #10b981;
            --secondary-green: #059669;
            --primary-purple: #8d4bff;
            --secondary-purple: #a855f7;
            --dark-bg: #1a132f;
            --darker-bg: #1e1433;
            --card-bg: #2c204d;
            --border-color: #3d2e6b;
            --text-color: #e5e7eb;
            /* neons */
            --neon-bot-1: #8d4bff;
            --neon-bot-2: #a855f7;
            --neon-tech-1: #10b981;
            --neon-tech-2: #34d399;
        }

        body {
            background: var(--dark-bg);
            color: var(--text-color);
            font-family: 'Segoe UI',Tahoma,Geneva,Verdana,sans-serif;
            overflow: hidden;
            height: 100vh;
            margin: 0;
        }

        .tech-container {
            display: grid;
            grid-template-columns: 320px 1fr;
            height: 100vh;
            overflow: hidden;
        }

        /* ========== SIDEBAR ========== */
        .sidebar {
            background: var(--dark-bg);
            border-right: 1px solid var(--border-color);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid var(--border-color);
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logo-icon {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
            /* caminho solicitado para o ícone ao lado de "DotIA Tech" */
            .logo-icon img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .logo-text {
            font-size: 24px;
            font-weight: 700;
            background: linear-gradient(135deg,var(--primary-green),#06b6d4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .refresh-button {
            background: rgba(16,185,129,.1);
            border: 2px solid var(--primary-green);
            border-radius: 12px;
            padding: 10px;
            color: var(--primary-green);
            font-weight: 600;
            transition: .3s;
            margin: 15px 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            cursor: pointer;
        }

            .refresh-button:hover {
                background: var(--primary-green);
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(16,185,129,.4);
            }

            .refresh-button:active {
                transform: scale(.95);
            }

            .refresh-button.spinning i {
                animation: spin 1s linear infinite;
            }

        @@keyframes spin {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .live-indicator {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 15px;
            margin: 0 20px 10px;
            background: rgba(16,185,129,.1);
            border: 1px solid rgba(16,185,129,.3);
            border-radius: 10px;
            font-size: 12px;
            color: #10b981;
            font-weight: 600;
        }

        .live-dot {
            width: 8px;
            height: 8px;
            background: #10b981;
            border-radius: 50%;
            animation: pulse-live 2s ease-in-out infinite;
        }

        @@keyframes pulse-live {
            0%, 100% {
                opacity: 1;
                transform: scale(1);
            }

            50% {
                opacity: .5;
                transform: scale(.9);
            }
        }

        .stats-card {
            background: linear-gradient(135deg,var(--card-bg),var(--darker-bg));
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
            margin: 20px;
        }

        .stat-item {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid rgba(255,255,255,.1);
        }

            .stat-item:last-child {
                border-bottom: none;
            }

        .stat-value {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary-green);
        }

        .tickets-container {
            flex: 1;
            overflow-y: auto;
            padding: 0 20px;
        }

        .tickets-title {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--text-color);
        }

        .ticket-card {
            background: var(--card-bg);
            border: 2px solid transparent;
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 12px;
            cursor: pointer;
            transition: .3s;
            position: relative;
        }

            .ticket-card:hover {
                border-color: var(--primary-green);
                transform: translateX(5px);
            }

            .ticket-card.active {
                border-color: var(--primary-green);
                background: linear-gradient(135deg,var(--card-bg),#1e3a32);
            }

            .ticket-card.new-update::before {
                content: '';
                position: absolute;
                left: 8px;
                top: 50%;
                transform: translateY(-50%);
                width: 8px;
                height: 8px;
                background: #fbbf24;
                border-radius: 50%;
                animation: pulse-live 2s ease-in-out infinite;
            }

        .badge-warning {
            background: #fbbf24;
            color: #1a132f;
        }

        /* ========== WORK AREA ========== */
        .work-area {
            display: flex;
            flex-direction: column;
            background: var(--darker-bg);
            height: 100vh;
            overflow: hidden;
        }

        .work-header {
            background: var(--dark-bg);
            border-bottom: 1px solid var(--border-color);
            padding: 20px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .ticket-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg,var(--primary-green),var(--secondary-green));
            color: #fff;
            font-size: 22px;
        }

        .conversation-area {
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 30px;
            max-height: calc(100vh - 200px);
            scroll-behavior: smooth;
        }

            .conversation-area::-webkit-scrollbar {
                width: 8px;
            }

            .conversation-area::-webkit-scrollbar-track {
                background: var(--card-bg);
                border-radius: 10px;
            }

            .conversation-area::-webkit-scrollbar-thumb {
                background: var(--primary-green);
                border-radius: 10px;
            }

        .message-box {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 20px;
            animation: slideIn .3s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .message-box.user {
            border-left: 4px solid var(--primary-purple);
        }

        .message-box.bot {
            border-left: 4px solid #3b82f6;
        }

        .message-box.tech {
            border-left: 4px solid var(--primary-green);
            background: linear-gradient(135deg,rgba(16,185,129,.1),rgba(5,150,105,.1));
        }

        .message-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 12px;
            padding-bottom: 12px;
            border-bottom: 1px solid var(--border-color);
        }

        /* ===== Avatares com círculo + neons para BOT/TECH ===== */
        .message-avatar {
            position: relative;
            width: 44px;
            height: 44px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: visible; /* para o anel */
            background: transparent;
            flex-shrink: 0;
        }

            .message-avatar img,
            .message-avatar i {
                width: 100%;
                height: 100%;
                object-fit: contain;
                border-radius: 50%;
                display: block;
                background: transparent;
            }

            /* anel base (para todos) */
            .message-avatar::after {
                content: '';
                position: absolute;
                inset: -4px;
                border-radius: 50%;
                border: 2px solid rgba(255,255,255,.2);
                box-shadow: 0 0 0 2px rgba(0,0,0,.25);
                pointer-events: none;
            }

        /* usuário: anel lilás suave */
        .message-box.user .message-avatar::after {
            border-color: rgba(141,75,255,.65);
            box-shadow: 0 0 6px rgba(141,75,255,.55);
        }

        /* bot: mantém aura neon + anel com roxo */
        .message-box.bot .message-avatar::after {
            border-color: rgba(141,75,255,.9);
            box-shadow: 0 0 6px var(--neon-bot-1), 0 0 16px var(--neon-bot-2);
        }

        .neon-bot {
            filter: drop-shadow(0 0 6px var(--neon-bot-1)) drop-shadow(0 0 18px var(--neon-bot-2));
            animation: glowPulse 2.4s ease-in-out infinite;
        }

        /* técnico: mantém aura neon + anel com verde */
        .message-box.tech .message-avatar::after {
            border-color: rgba(16,185,129,.9);
            box-shadow: 0 0 6px var(--neon-tech-1), 0 0 16px var(--neon-tech-2);
        }

        .neon-tech {
            filter: drop-shadow(0 0 6px var(--neon-tech-1)) drop-shadow(0 0 18px var(--neon-tech-2));
            animation: glowPulse 2.4s ease-in-out infinite;
        }

        @@keyframes glowPulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.03);
            }
        }

        .message-meta {
            flex: 1;
        }

        .message-author {
            font-weight: 600;
            color: var(--text-color);
        }

        .message-time {
            font-size: 12px;
            color: #9ca3af;
        }

        .message-content {
            color: var(--text-color);
            line-height: 1.6;
        }

        .solution-area {
            background: var(--dark-bg);
            border-top: 1px solid var(--border-color);
            padding: 20px 30px;
        }

        .solution-container {
            background: var(--card-bg);
            border: 2px solid var(--primary-green);
            border-radius: 16px;
            padding: 20px;
        }

        .action-buttons {
            display: flex;
            gap: 12px;
        }

        .btn-respond {
            flex: 1;
            background: linear-gradient(135deg,#3b82f6,#2563eb);
            border: none;
            padding: 12px 20px;
            border-radius: 10px;
            color: #fff;
            font-weight: 600;
            transition: .3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .btn-respond:hover:not(:disabled) {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(59,130,246,.4);
            }

        .btn-resolve {
            flex: 1;
            background: linear-gradient(135deg,var(--primary-green),var(--secondary-green));
            border: none;
            padding: 12px 20px;
            border-radius: 10px;
            color: #fff;
            font-weight: 600;
            transition: .3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .btn-resolve:hover:not(:disabled) {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(16,185,129,.4);
            }

            .btn-respond:disabled, .btn-resolve:disabled {
                opacity: .5;
                cursor: not-allowed;
            }

        .alert-success {
            background: rgba(16,185,129,.1);
            border: 1px solid var(--primary-green);
            color: var(--primary-green);
        }

        .form-control, .form-control:focus {
            background: var(--darker-bg);
            border: 1px solid var(--border-color);
            color: var(--text-color);
        }

            .form-control:focus {
                border-color: var(--primary-green);
                box-shadow: 0 0 0 3px rgba(16,185,129,.1);
            }

            .form-control::placeholder {
                color: #6b7280;
            }

        .btn-secondary {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            color: var(--text-color);
        }

            .btn-secondary:hover {
                background: var(--border-color);
                border-color: var(--primary-green);
            }

        .typing-indicator {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 16px 20px;
            background: rgba(16,185,129,.1);
            border-radius: 18px;
            margin-top: 10px;
            animation: slideIn .3s ease-out;
        }

        .typing-dot {
            width: 8px;
            height: 8px;
            background: var(--primary-green);
            border-radius: 50%;
            animation: typing 1.4s infinite;
        }

            .typing-dot:nth-child(2) {
                animation-delay: .2s;
            }

            .typing-dot:nth-child(3) {
                animation-delay: .4s;
            }

        @@keyframes typing {
            0%, 60%, 100% {
                transform: translateY(0);
                opacity: .7;
            }

            30% {
                transform: translateY(-8px);
                opacity: 1;
            }
        }

        /* acessibilidade/contraste em textos auxiliares */
        .text-muted, .text-dark, small, .badge-warning, label, span.text-muted, div.text-muted {
            color: #ffffff !important;
        }

        .badge-warning {
            background: #fbbf24 !important;
            color: #ffffff !important;
        }

        /* Responsivo */
        @@media (max-width:768px) {
            .tech-container {
                grid-template-columns: 1fr;
            }

            .sidebar {
                display: none;
            }
        }
    </style>
</head>

<body>
    <div class="tech-container">
        <!-- SIDEBAR -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="logo-container">
                    <!-- ÍCONE do título (caminho corrigido) -->
                    <div class="logo-icon">
                        <img src="~/img/dotia-logo.png" alt="DotIA Tech" />
                    </div>
                    <div class="logo-text">DotIA Tech</div>
                </div>
            </div>

            <button class="refresh-button" onclick="atualizarTickets()" id="refreshBtn">
                <i class="bi bi-arrow-clockwise"></i>
                <span>Atualizar</span>
            </button>

            <div class="live-indicator" id="liveIndicator">
                <div class="live-dot"></div>
                <span>Sincronizando automaticamente</span>
            </div>

            <div class="stats-card">
                <div class="stat-item">
                    <span class="text-muted">Tickets Pendentes</span>
                    <span class="stat-value" id="totalTickets">0</span>
                </div>
                <div class="stat-item">
                    <span class="text-muted">Resolvidos Hoje</span>
                    <span class="stat-value text-success" id="resolvidosHoje">0</span>
                </div>
            </div>

            <div class="tickets-container">
                <div class="tickets-title">
                    <i class="bi bi-list-task"></i> Tickets Pendentes
                </div>
                <div id="ticketsList"></div>
            </div>

            <div class="p-3 border-top border-secondary">
                <a href="/Login/Sair" class="btn btn-outline-light w-100">
                    <i class="bi bi-box-arrow-right"></i> Sair
                </a>
            </div>
        </div>

        <!-- WORK AREA -->
        <div class="work-area">
            <div class="work-header">
                <div id="ticketHeader" style="display:none;">
                    <div class="d-flex align-items-center gap-3">
                        <div class="ticket-avatar">
                            <i class="bi bi-ticket-detailed"></i>
                        </div>
                        <div>
                            <h5 class="mb-1" id="headerTitle" style="color:var(--text-color);">Ticket #0</h5>
                            <small class="text-muted" id="headerMeta">Solicitante: -</small>
                        </div>
                    </div>
                </div>
                <button class="btn btn-sm btn-outline-light" onclick="atualizarTickets()" title="Atualizar">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
            </div>

            <div class="conversation-area" id="conversationArea">
                <div class="text-center py-5">
                    <div class="mb-3" style="font-size:48px; color:#8b5cf6;">
                        <i class="bi bi-clipboard-check"></i>
                    </div>
                    <h3 class="mb-2" style="color:var(--text-color);">Selecione um Ticket</h3>
                    <p class="text-muted">Escolha um ticket da lista ao lado para visualizar os detalhes e responder.</p>
                </div>
            </div>

            <div class="solution-area" id="solutionArea" style="display:none;">
                <div class="alert alert-success mb-3" id="successMessage" style="display:none;">
                    <i class="bi bi-check-circle"></i> <span id="successText"></span>
                </div>

                <div class="solution-container">
                    <label class="form-label fw-bold mb-3" style="color:var(--primary-green); font-size:16px;">
                        <i class="bi bi-chat-dots"></i> Digite sua resposta
                    </label>

                    <textarea id="solutionInput"
                              class="form-control mb-3"
                              rows="5"
                              placeholder="Escreva sua mensagem aqui..."
                              onkeydown="handleKeyPress(event)"></textarea>

                    <div class="d-flex gap-2 justify-content-between">
                        <button class="btn btn-secondary" onclick="limparFormulario()">
                            <i class="bi bi-x-circle"></i> Limpar
                        </button>

                        <div class="action-buttons">
                            <button class="btn-respond" id="respondBtn" onclick="responderTicket(false)">
                                <i class="bi bi-reply"></i> Enviar Mensagem
                            </button>
                            <button class="btn-resolve" id="resolveBtn" onclick="responderTicket(true)">
                                <i class="bi bi-check-circle"></i> Resolver e Fechar
                            </button>
                        </div>
                    </div>

                    <div class="mt-3 text-muted small">
                        <i class="bi bi-info-circle"></i>
                        <strong>Enviar Mensagem:</strong> mantém o ticket aberto •
                        <strong>Resolver:</strong> fecha o ticket
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let ticketSelecionado = null;
        let tickets = [];
        let ticketsAnterior = [];
        let conversationMessages = [];
        let pollingTecnicoInterval = null;
        let autoRefreshInterval = null;

        window.addEventListener('load', () => {
            carregarTickets();
            iniciarAutoRefresh();
        });

        function iniciarAutoRefresh(){
            autoRefreshInterval = setInterval(() => {
                atualizarTicketsSilencioso();
            }, 5000);
        }

        async function atualizarTickets(){
            const refreshBtn = document.getElementById('refreshBtn');
            refreshBtn.classList.add('spinning');
            await carregarTickets();
            setTimeout(() => {
                refreshBtn.classList.remove('spinning');
                mostrarNotificacao('✅ Atualizado!', 'success');
            }, 500);
        }

        async function atualizarTicketsSilencioso(){
            try{
                const response = await fetch('/Tecnico/ObterTickets');
                const ticketsNovo = await response.json();

                if(JSON.stringify(ticketsNovo) !== JSON.stringify(ticketsAnterior)){
                    const novosOuAtualizados = ticketsNovo.filter(novo => {
                        const ant = ticketsAnterior.find(t => t.id === novo.id);
                        return !ant || JSON.stringify(ant) !== JSON.stringify(novo);
                    });

                    if(novosOuAtualizados.length > 0){
                        await carregarTickets();

                        novosOuAtualizados.forEach(item => {
                            const el = document.querySelector(`[data-ticket-id="${item.id}"]`);
                            if(el){
                                el.classList.add('new-update');
                                setTimeout(() => el.classList.remove('new-update'), 3000);
                            }
                        });

                        if(ticketSelecionado && novosOuAtualizados.some(i => i.id === ticketSelecionado.id)){
                            const atual = ticketsNovo.find(t => t.id === ticketSelecionado.id);
                            if(atual) await selecionarTicket(atual, true);
                        }
                    }

                    ticketsAnterior = ticketsNovo;
                }
            }catch(e){
                console.error('Erro na atualização silenciosa:', e);
            }
        }

        window.addEventListener('beforeunload', () => {
            if(pollingTecnicoInterval) clearInterval(pollingTecnicoInterval);
            if(autoRefreshInterval) clearInterval(autoRefreshInterval);
        });

        function handleKeyPress(e){
            if(e.key === 'Enter' && !e.shiftKey){
                e.preventDefault();
                responderTicket(false);
            }
        }

        async function carregarTickets(){
            try{
                const response = await fetch('/Tecnico/ObterTickets');
                tickets = await response.json();
                ticketsAnterior = tickets;

                const list = document.getElementById('ticketsList');
                list.innerHTML = '';

                document.getElementById('totalTickets').textContent = tickets.length;

                if(tickets.length === 0){
                    list.innerHTML = `
                        <div class="text-center py-5 text-muted">
                            <div style="font-size:48px;color:#10b981;"><i class="bi bi-emoji-smile"></i></div>
                            <div class="mt-2">Nenhum ticket pendente!</div>
                        </div>`;
                    return;
                }

                tickets.forEach(ticket => {
                    const dt = new Date(ticket.dataAbertura);
                    const dataFormatada = dt.toLocaleDateString('pt-BR');

                    const card = document.createElement('div');
                    card.className = 'ticket-card';
                    card.dataset.ticketId = ticket.id;
                    card.onclick = () => selecionarTicket(ticket);

                    if(ticketSelecionado && ticketSelecionado.id === ticket.id){
                        card.classList.add('active');
                    }

                    card.innerHTML = `
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="fw-bold" style="color:var(--primary-green);">Ticket #${ticket.id}</span>
                            <span class="badge badge-warning">${ticket.status}</span>
                        </div>
                        <div class="mb-2 small" style="color:var(--text-color);">
                            <i class="bi bi-person"></i> ${ticket.nomeSolicitante}
                        </div>
                        <div class="text-muted small text-truncate">${ticket.descricaoProblema}</div>
                        <div class="text-muted small mt-2"><i class="bi bi-calendar"></i> ${dataFormatada}</div>
                    `;

                    list.appendChild(card);
                });
            }catch(e){
                console.error('Erro ao carregar tickets:', e);
            }
        }

        async function selecionarTicket(ticket, isAutoRefresh=false){
            ticketSelecionado = ticket;
            conversationMessages = [];

            if(!isAutoRefresh){
                document.querySelectorAll('.ticket-card').forEach(i => i.classList.remove('active'));
                event?.currentTarget?.classList.add('active');
            }

            document.getElementById('ticketHeader').style.display = 'block';
            document.getElementById('headerTitle').textContent = `Ticket #${ticket.id}`;
            document.getElementById('headerMeta').textContent = `Solicitante: ${ticket.nomeSolicitante}`;

            const conversationArea = document.getElementById('conversationArea');
            conversationArea.innerHTML = '';

            adicionarMensagemAoChat('user', ticket.perguntaOriginal, ticket.nomeSolicitante);
            adicionarMensagemAoChat('bot', ticket.respostaIA || 'A resposta automática não foi suficiente para resolver o problema do usuário.', 'DotIA');

            if(ticket.solucao){
                const mensagens = ticket.solucao.split('\n\n');
                mensagens.forEach(m => {
                    if(!m.trim()) return;
                    let s = m.trim();

                    const usuarioRegex = /^\[USUÁRIO\s*-\s*\d{2}\/\d{2}\/\d{4}\s\d{2}:\d{2}\]\s*/;
                    const tecnicoRegex = /^\[TÉCNICO\s*-\s*\d{2}\/\d{2}\/\d{4}\s\d{2}:\d{2}\]\s*/;
                    const isUsuario = usuarioRegex.test(s);
                    const isTecnico = tecnicoRegex.test(s);

                    const timestampRegex = /^\[\w+\s*-\s*\d{2}\/\d{2}\/\d{4}\s\d{2}:\d{2}\]\s*/;
                    s = s.replace(timestampRegex, '');

                    if(!s) return;

                    if(isUsuario) adicionarMensagemAoChat('user', s, ticket.nomeSolicitante);
                    else if(isTecnico) adicionarMensagemAoChat('tech', s, 'Você (Técnico)');
                    else adicionarMensagemAoChat('tech', s, 'Você (Técnico)');
                });
            }

            document.getElementById('solutionArea').style.display = 'block';
            document.getElementById('solutionInput').value = '';
            document.getElementById('successMessage').style.display = 'none';

            iniciarPollingTecnico(ticket.id);
        }

        // ====== CAMINHOS CORRIGIDOS DOS ÍCONES ======
        const ICON_USER   = '@Url.Content("~/img/icon-user.png")';
        const ICON_BOT    = '@Url.Content("~/img/icon-bot.png")';
        const ICON_TECH   = '@Url.Content("~/img/icon-tecnico.png")';

        function avatarMarkup(tipo){
            if(tipo === 'user'){
                return `<img src="${ICON_USER}" alt="Usuário" />`;
            }
            if(tipo === 'bot'){
                return `<img class="neon-bot" src="${ICON_BOT}" alt="DotIA" />`;
            }
            // tech
            return `<img class="neon-tech" src="${ICON_TECH}" alt="Técnico" />`;
        }

        function adicionarMensagemAoChat(tipo, conteudo, autor){
            const conversationArea = document.getElementById('conversationArea');
            const time = new Date().toLocaleTimeString('pt-BR', { hour:'2-digit', minute:'2-digit' });

            const wrapper = document.createElement('div');
            wrapper.className = `message-box ${tipo}`;
            wrapper.innerHTML = `
                <div class="message-header">
                    <div class="message-avatar">${avatarMarkup(tipo)}</div>
                    <div class="message-meta">
                        <div class="message-author">${autor}</div>
                        <div class="message-time">${time}</div>
                    </div>
                </div>
                <div class="message-content">${conteudo}</div>
            `;

            conversationArea.appendChild(wrapper);
            setTimeout(() => wrapper.scrollIntoView({ behavior:'smooth', block:'end' }), 80);

            conversationMessages.push({ tipo, conteudo, autor, time });
        }

        async function responderTicket(marcarComoResolvido){
            if(!ticketSelecionado) return;

            const solucao = document.getElementById('solutionInput').value.trim();

            if(marcarComoResolvido){
                if(!confirm('Tem certeza que deseja fechar este ticket? O cliente será notificado.')) return;
            }else{
                if(!solucao){
                    alert('Por favor, escreva uma mensagem para o cliente.');
                    return;
                }
            }

            const respondBtn = document.getElementById('respondBtn');
            const resolveBtn = document.getElementById('resolveBtn');
            respondBtn.disabled = true;
            resolveBtn.disabled = true;

            const conversationArea = document.getElementById('conversationArea');
            let typingDiv = null;

            if(solucao){
                typingDiv = document.createElement('div');
                typingDiv.id = 'typing-temp';
                typingDiv.className = 'typing-indicator';
                typingDiv.innerHTML = `
                    <div class="typing-dot"></div>
                    <div class="typing-dot"></div>
                    <div class="typing-dot"></div>
                    <span style="font-size:12px;color:var(--primary-green);margin-left:8px;">Enviando mensagem...</span>
                `;
                conversationArea.appendChild(typingDiv);
                setTimeout(() => typingDiv.scrollIntoView({ behavior:'smooth', block:'end' }), 60);
            }

            try{
                const response = await fetch('/Tecnico/ResolverTicket', {
                    method:'POST',
                    headers:{ 'Content-Type':'application/json' },
                    body:JSON.stringify({
                        ticketId:ticketSelecionado.id,
                        solucao: solucao || 'Ticket fechado pelo técnico.',
                        marcarComoResolvido: marcarComoResolvido
                    })
                });
                const data = await response.json();

                document.getElementById('typing-temp')?.remove();

                if(data.sucesso){
                    if(solucao) adicionarMensagemAoChat('tech', solucao, 'Você (Técnico)');

                    const successMessage = document.getElementById('successMessage');
                    const successText = document.getElementById('successText');
                    successText.textContent = data.mensagem;
                    successMessage.style.display = 'block';
                    document.getElementById('solutionInput').value = '';

                    setTimeout(() => {
                        successMessage.style.display = 'none';
                        if(marcarComoResolvido){
                            carregarTickets();
                            conversationArea.innerHTML = `
                                <div class="text-center py-5">
                                    <div class="mb-3" style="font-size:48px;color:#10b981;">
                                        <i class="bi bi-check2-circle"></i>
                                    </div>
                                    <h3 class="mb-2" style="color:var(--text-color);">Ticket Resolvido com Sucesso!</h3>
                                    <p class="text-muted">O ticket foi marcado como resolvido e o cliente foi notificado.</p>
                                </div>`;
                            document.getElementById('solutionArea').style.display = 'none';
                            document.getElementById('ticketHeader').style.display = 'none';
                            ticketSelecionado = null;
                        }else{
                            mostrarNotificacao('Mensagem enviada! O ticket continua em acompanhamento.','success');
                        }
                    }, 1600);
                }else{
                    alert('Erro ao processar ticket.');
                }
            }catch(e){
                document.getElementById('typing-temp')?.remove();
                console.error('Erro:', e);
                alert('Erro ao conectar com o servidor.');
            }finally{
                respondBtn.disabled = false;
                resolveBtn.disabled = false;
            }
        }

        function limparFormulario(){
            document.getElementById('solutionInput').value = '';
            document.getElementById('successMessage').style.display = 'none';
            document.getElementById('respondBtn').disabled = false;
            document.getElementById('resolveBtn').disabled = false;
        }

        function mostrarNotificacao(msg, tipo='info'){
            const cores = {
                success:'linear-gradient(135deg,#10b981,#059669)',
                warning:'linear-gradient(135deg,#fbbf24,#f59e0b)',
                info:'linear-gradient(135deg,#3b82f6,#2563eb)'
            };
            const n = document.createElement('div');
            n.style.cssText = `
                position:fixed; top:20px; right:20px;
                background:${cores[tipo]};
                padding:15px 25px; border-radius:12px;
                color:#fff; font-weight:600; z-index:10000;
                animation:slideInRight .3s ease-out; max-width:400px;`;
            n.innerHTML = msg;
            document.body.appendChild(n);
            setTimeout(() => n.remove(), 5000);
        }

        function iniciarPollingTecnico(ticketId){
            if(pollingTecnicoInterval) clearInterval(pollingTecnicoInterval);

            let ultimoHash = '';

            pollingTecnicoInterval = setInterval(async () => {
                try{
                    const r = await fetch(`/Tecnico/ObterTicket/${ticketId}`);
                    const data = await r.json();

                    if(data && data.ticket && data.ticket.solucao){
                        const hashAtual = data.ticket.solucao.length + '_' + data.ticket.solucao.substring(0, 50);
                        if(hashAtual !== ultimoHash){
                            ultimoHash = hashAtual;

                            const conversationArea = document.getElementById('conversationArea');
                            conversationArea.innerHTML = '';

                            adicionarMensagemAoChat('user', ticketSelecionado.perguntaOriginal, ticketSelecionado.nomeSolicitante);
                            adicionarMensagemAoChat('bot', ticketSelecionado.respostaIA || 'A resposta automática não foi suficiente.', 'DotIA');

                            const mensagens = data.ticket.solucao.split('\n\n');
                            mensagens.forEach(m => {
                                if(!m.trim()) return;
                                let s = m.trim();

                                const usuarioRegex = /^\[USUÁRIO\s*-\s*\d{2}\/\d{2}\/\d{4}\s\d{2}:\d{2}\]\s*/;
                                const tecnicoRegex = /^\[TÉCNICO\s*-\s*\d{2}\/\d{2}\/\d{4}\s\d{2}:\d{2}\]\s*/;

                                const isUsuario = usuarioRegex.test(s);
                                const isTecnico = tecnicoRegex.test(s);

                                const timestampRegex = /^\[\w+\s*-\s*\d{2}\/\d{2}\/\d{4}\s\d{2}:\d{2}\]\s*/;
                                s = s.replace(timestampRegex, '');

                                if(!s) return;

                                if(isUsuario) adicionarMensagemAoChat('user', s, ticketSelecionado.nomeSolicitante);
                                else if(isTecnico) adicionarMensagemAoChat('tech', s, 'Você (Técnico)');
                                else adicionarMensagemAoChat('tech', s, 'Você (Técnico)');
                            });

                            mostrarNotificacao('Nova mensagem do usuário!','success');
                        }
                    }

                    if(data && data.ticket && data.ticket.idStatus === 2){
                        clearInterval(pollingTecnicoInterval);
                        pollingTecnicoInterval = null;
                    }
                }catch(e){
                    console.error('Erro no polling do técnico:', e);
                }
            }, 3000);
        }
    </script>
