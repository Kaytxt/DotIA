                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn-action btn-success" onclick="enviarResposta(false)">
                        <i class="bi bi-reply"></i> Enviar Resposta
                    </button>
                    <button type="button" class="btn btn-primary" onclick="enviarResposta(true)">
                        <i class="bi bi-check-circle"></i> Resolver e Fechar
                    </button>
