@{
    ViewData["Title"] = "DotIA - Painel do Gerente";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        :root {
            --primary-blue: #3b82f6;
            --secondary-blue: #2563eb;
            --primary-purple: #8b5cf6;
            --primary-green: #10b981;
            --dark-bg: #1a132f;
            --darker-bg: #1e1433;
            /* novos para painel/tabelas */
            --panel-bg: #221a3d; /* roxo escuro para fundos */
            --panel-bg-2: #20173a; /* um pouco mais escuro (thead) */
            --panel-hover: #231a3f; /* hover */
            --panel-border: #3d2e6b; /* divisão roxo claro */

            --text-color: #e8e8ff;
            --text-muted: #9ca3af;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: var(--dark-bg);
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        /* Header */
        .header {
            background: linear-gradient(135deg,var(--darker-bg),var(--dark-bg));
            border-bottom: 2px solid var(--panel-border);
            padding: 20px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: 0 4px 20px rgba(0,0,0,.3);
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logo-icon {
            width: 55px;
            height: 55px;
            border-radius: 15px;
            background: transparent;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            box-shadow: 0 8px 20px rgba(59,130,246,.4);
            animation: pulse 2s ease-in-out infinite;
            overflow: hidden;
        }

            .logo-icon img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1)
            }

            50% {
                transform: scale(1.05)
            }
        }

        .logo-text {
            font-size: 32px;
            font-weight: 800;
            background: linear-gradient(135deg,var(--primary-blue),var(--primary-purple));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .container-fluid {
            padding: 30px 40px;
            max-width: 1800px;
            margin: 0 auto;
        }

        /* Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(280px,1fr));
            gap: 25px;
            margin-bottom: 35px;
        }

        .stat-card {
            background: linear-gradient(135deg, var(--panel-bg), var(--darker-bg));
            border: 2px solid var(--panel-border);
            border-radius: 22px;
            padding: 28px;
            position: relative;
            overflow: hidden;
            transition: .3s ease;
        }

            .stat-card:hover {
                transform: translateY(-6px);
                border-color: var(--primary-blue);
                box-shadow: 0 12px 34px rgba(59,130,246,.28);
            }

        .stat-icon {
            width: 68px;
            height: 68px;
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 34px;
            margin-bottom: 18px;
            box-shadow: 0 8px 20px rgba(0,0,0,.28);
            overflow: hidden;
            background: transparent;
            padding: 10px;
        }

            .stat-icon img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                filter: drop-shadow(0 0 8px rgba(59,130,246,.6));
            }

                /* Filtro especial para ícones de mensagem/balão que podem ter fundo branco */
                .stat-icon img[src*="balao"],
                .stat-icon img[src*="message"],
                .stat-icon img[src*="chat"] {
                    /* Remove qualquer fundo branco e aplica cor roxa/azul */
                    mix-blend-mode: screen;
                    filter: invert(1) hue-rotate(180deg) saturate(3) brightness(1.2) drop-shadow(0 0 8px rgba(139,92,246,.8));
                }

        .stat-value {
            font-size: 42px;
            font-weight: 800;
            margin-bottom: 6px;
            background: linear-gradient(135deg,var(--primary-blue),var(--primary-purple));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .stat-label {
            color: var(--text-muted);
            font-size: 14px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: .5px;
        }

        /* Abas */
        .tabs-nav {
            display: flex;
            gap: 14px;
            margin-bottom: 26px;
            border-bottom: 3px solid var(--panel-border);
            padding-bottom: 0;
            flex-wrap: wrap;
        }

        .tab-btn {
            background: transparent;
            border: none;
            padding: 14px 26px;
            color: #bfbfe8;
            font-weight: 800;
            font-size: 15px;
            border-bottom: 4px solid transparent;
            cursor: pointer;
            transition: .2s;
            display: flex;
            align-items: center;
            gap: 10px;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

            .tab-btn:hover {
                color: #fff;
                background: rgba(139,92,246,.12);
            }

            .tab-btn.active {
                color: #fff;
                border-bottom-color: var(--primary-blue);
                background: rgba(59,130,246,.12);
            }

        .section-title {
            font-size: 26px;
            font-weight: 800;
            margin: 16px 0 18px;
            display: flex;
            align-items: center;
            gap: 12px;
            background: linear-gradient(135deg,var(--primary-blue),var(--primary-purple));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Contêiner tabelas/painéis */
        .data-table-container {
            background: var(--panel-bg);
            border: 2px solid var(--panel-border);
            border-radius: 22px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,.32);
        }

        /* Tabelas Dark */
        .table {
            --bs-table-bg: transparent;
            --bs-table-striped-bg: rgba(255,255,255,.02);
            --bs-table-striped-color: var(--text-color);
            --bs-table-hover-bg: transparent;
            --bs-table-hover-color: var(--text-color);
            color: var(--text-color);
            margin: 0;
        }

            .table thead,
            .table thead tr,
            .table thead th {
                background: var(--panel-bg-2) !important;
                color: #fff !important;
                border-bottom: 1px solid var(--panel-border) !important;
            }

            .table th,
            .table td {
                color: var(--text-color) !important;
                border-top: none !important;
                background: transparent !important;
                vertical-align: middle;
                padding: 18px 20px;
            }

            .table tbody tr {
                border-bottom: 1px solid var(--panel-border) !important;
                transition: background .2s ease, transform .2s ease;
            }

        .table-hover tbody tr:hover {
            background: var(--panel-hover) !important;
            transform: scale(1.002);
        }

        /* Badges */
        .badge {
            padding: 8px 14px;
            border-radius: 10px;
            font-weight: 800;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: .4px;
        }

        .badge-primary {
            background: rgba(59,130,246,.16);
            color: #8fb8ff;
            border: 1px solid rgba(59,130,246,.28);
        }

        .badge-success {
            background: rgba(16,185,129,.16);
            color: #7ae1bf;
            border: 1px solid rgba(16,185,129,.28);
        }

        .badge-warning {
            background: rgba(251,191,36,.16);
            color: #ffd483;
            border: 1px solid rgba(251,191,36,.28);
        }

        .badge-purple {
            background: rgba(139,92,246,.16);
            color: #ccb7ff;
            border: 1px solid rgba(139,92,246,.28);
        }

        /* Ícones & Botões utilitários */
        .bi {
            font-family: "bootstrap-icons" !important;
            font-style: normal;
            font-weight: normal;
            line-height: 1;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .btn-icon {
            width: 36px;
            height: 36px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: #211a3c;
            border: 1px solid var(--panel-border);
            color: #dcd7ff;
            border-radius: 10px;
            margin: 0 4px;
            transition: .18s ease;
            outline: 0;
        }

            .btn-icon i {
                font-size: 18px;
            }

            .btn-icon:hover {
                background: rgba(139,92,246,.18);
                border-color: var(--primary-purple);
                color: #fff;
                transform: translateY(-2px);
            }

            .btn-icon.danger {
                border-color: #ef4444;
                color: #ff9f9f;
            }

                .btn-icon.danger:hover {
                    background: rgba(239,68,68,.18);
                    color: #fff;
                }

        /* Modals */
        .modal-content {
            background: var(--panel-bg);
            border: 2px solid var(--panel-border);
            color: var(--text-color);
            border-radius: 20px;
        }

        .modal-header {
            border-bottom: 2px solid var(--panel-border);
            padding: 22px;
        }

        .modal-title {
            font-weight: 800;
            font-size: 22px;
            background: linear-gradient(135deg,var(--primary-blue),var(--primary-purple));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .modal-footer {
            border-top: 2px solid var(--panel-border);
            padding: 22px;
        }

        .form-label {
            font-weight: 800;
            color: var(--text-color);
            margin-bottom: 10px;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: .4px;
        }

        .form-control, .form-select {
            background: var(--darker-bg);
            border: 1px solid var(--panel-border);
            color: var(--text-color);
            border-radius: 12px;
            padding: 12px 14px;
        }

            .form-control:focus, .form-select:focus {
                background: var(--darker-bg);
                border-color: var(--primary-blue);
                color: var(--text-color);
                box-shadow: 0 0 0 4px rgba(59,130,246,.12);
            }

        /* Util */
        .empty-state {
            text-align: center;
            padding: 70px 12px;
            color: #8b8fb0;
        }

            .empty-state i {
                font-size: 86px;
                opacity: .4;
                display: block;
                margin-bottom: 18px;
            }

        .loading-spinner {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 60px;
        }

        .spinner-border {
            width: 56px;
            height: 56px;
            border-width: 6px;
        }

        /* Notificações (animações) */
        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0
            }

            to {
                transform: translateX(0);
                opacity: 1
            }
        }

        @@keyframes slideOutRight {
            from {
                transform: translateX(0);
                opacity: 1
            }

            to {
                transform: translateX(100%);
                opacity: 0
            }
        }

        .tab-content {
            display: none;
        }

            .tab-content.active {
                display: block;
            }

        /* ===== Responsivo ===== */
        @@media (max-width:768px) {
            .header {
                padding:15px 20px;
                flex-direction:column;
                gap:15px;
                align-items:flex-start;
            }

            .logo-container {
                gap:10px;
            }

            .logo-icon {
                width:45px;
                height:45px;
            }

            .logo-text {
                font-size:24px;
            }

            .container-fluid {
                padding:20px 15px;
            }

            /* Cards de stats responsivos */
            .stats-grid {
                grid-template-columns:repeat(auto-fit,minmax(140px,1fr));
                gap:15px;
                margin-bottom:25px;
            }

            .stat-card {
                padding:18px 15px;
            }

            .stat-icon {
                width:50px;
                height:50px;
                font-size:24px;
                margin-bottom:12px;
            }

            .stat-value {
                font-size:28px;
            }

            .stat-label {
                font-size:11px;
            }

            /* Tabs responsivos */
            .tabs-nav {
                gap:8px;
                overflow-x:auto;
                -webkit-overflow-scrolling:touch;
                margin-bottom:20px;
            }

            .tab-btn {
                padding:10px 16px;
                font-size:13px;
                white-space:nowrap;
                flex-shrink:0;
            }

            .section-title {
                font-size:20px;
                margin:12px 0 14px;
            }

            /* Tabelas responsivas - scroll horizontal */
            .data-table-container {
                overflow-x:auto;
                -webkit-overflow-scrolling:touch;
            }

            .table {
                min-width:600px;
            }

            .table th,
            .table td {
                padding:12px 15px;
                font-size:13px;
            }

            /* Botões de ação em coluna */
            .btn-icon {
                width:32px;
                height:32px;
                margin:2px;
            }

            .btn-icon i {
                font-size:14px;
            }

            /* Modals otimizados */
            .modal-dialog {
                margin:10px;
            }

            .modal-header,
            .modal-body,
            .modal-footer {
                padding:16px;
            }

            .modal-title {
                font-size:18px;
            }

            /* Badges menores */
            .badge {
                padding:6px 10px;
                font-size:10px;
            }
        }

        /* Ajustes para telas muito pequenas */
        @@media (max-width:400px) {
            .header {
                padding:12px 15px;
            }

            .logo-text {
                font-size:20px;
            }

            .container-fluid {
                padding:15px 10px;
            }

            .stats-grid {
                grid-template-columns:1fr;
                gap:12px;
            }

            .stat-card {
                padding:15px;
            }

            .tabs-nav {
                gap:6px;
            }

            .tab-btn {
                padding:8px 12px;
                font-size:12px;
            }

            .data-table-container {
                border-radius:15px;
            }

            .table th,
            .table td {
                padding:10px 12px;
                font-size:12px;
            }
        }
    </style>
</head>

<body>
    <div class="header">
        <div class="logo-container">
            <div class="logo-icon">
                <img src="~/img/dotia-logo.png" alt="DotIA" />
            </div>
            <div>
                <div class="logo-text">DotIA Manager</div>
                <small style="color:#b7bce6;font-weight:700">Painel de Gerenciamento</small>
            </div>
        </div>
        <div class="d-flex align-items-center gap-3">
            <span style="font-weight:700">Olá, <strong>@ViewBag.Nome</strong></span>
            <a href="/Login/Sair" class="btn btn-sm btn-outline-light">
                <i class="bi bi-box-arrow-right"></i> Sair
            </a>
        </div>
    </div>

    <div class="container-fluid">
        <!-- STATS -->
        <div class="stats-grid" id="statsGrid">
            <div class="stat-card">
                <div class="stat-icon">
                    <img src="~/img/icon-pessoa.png" alt="Usuários" />
                </div>
                <div class="stat-value" id="statUsuarios">0</div>
                <div class="stat-label">Total de Usuários</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <img src="~/img/icon-ticket.png" alt="Tickets" />
                </div>
                <div class="stat-value" id="statTicketsAbertos">0</div>
                <div class="stat-label">Tickets em Aberto</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <img src="~/img/icon-check.png" alt="Resolvidos" />
                </div>
                <div class="stat-value" id="statTicketsResolvidos">0</div>
                <div class="stat-label">Tickets Resolvidos</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <img src="~/img/icon-balao.png" alt="Chats" />
                </div>
                <div class="stat-value" id="statChats">0</div>
                <div class="stat-label">Total de Chats</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <img src="~/img/icon-grafico.png" alt="Hoje" />
                </div>
                <div class="stat-value" id="statResolvidosHoje">0</div>
                <div class="stat-label">Resolvidos Hoje</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <img src="~/img/icon-balao.png" alt="Chats Concluídos" />
                </div>
                <div class="stat-value" id="statChatsResolvidos">0</div>
                <div class="stat-label">Chats Concluídos</div>
            </div>
        </div>

        <!-- ABAS -->
        <div class="tabs-nav">
            <button class="tab-btn active" onclick="mudarTab(event,'tickets')"><i class="bi bi-ticket-detailed"></i> Tickets</button>
            <button class="tab-btn" onclick="mudarTab(event,'usuarios')"><i class="bi bi-people"></i> Usuários</button>
            <button class="tab-btn" onclick="mudarTab(event,'relatorios')"><i class="bi bi-bar-chart"></i> Relatórios</button>
        </div>

        <!-- TICKETS -->
        <div class="tab-content active" id="tab-tickets">
            <div class="section-title"><i class="bi bi-ticket-detailed-fill"></i> Gerenciamento de Tickets</div>

            <div class="data-table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Solicitante</th>
                            <th>Departamento</th>
                            <th>Descrição</th>
                            <th>Status</th>
                            <th>Data Abertura</th>
                        </tr>
                    </thead>
                    <tbody id="ticketsTableBody">
                        <tr>
                            <td colspan="6">
                                <div class="loading-spinner"><div class="spinner-border text-primary" role="status"></div></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- USUÁRIOS -->
        <div class="tab-content" id="tab-usuarios">
            <div class="section-title"><i class="bi bi-people-fill"></i> Gerenciamento de Usuários</div>

            <div class="data-table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Departamento</th>
                            <th>Total Tickets</th>
                            <th>Tickets Abertos</th>
                            <th>Total Chats</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody id="usersTableBody">
                        <tr>
                            <td colspan="7">
                                <div class="loading-spinner"><div class="spinner-border text-primary" role="status"></div></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- RELATÓRIOS -->
        <div class="tab-content" id="tab-relatorios">
            <div class="d-flex align-items-center gap-2 mb-3">
                <i class="bi bi-bar-chart-fill"></i>
                <h3 class="m-0" style="font-weight:800;background:linear-gradient(135deg,var(--primary-blue),var(--primary-purple));-webkit-background-clip:text;-webkit-text-fill-color:transparent;">Relatórios e Estatísticas</h3>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="data-table-container">
                        <div style="padding:26px">
                            <h5 class="mb-3" style="font-weight:800"><i class="bi bi-building"></i> Por Departamento</h5>
                            <div id="departamentosChart"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="data-table-container">
                        <div style="padding:26px">
                            <h5 class="mb-3" style="font-weight:800"><i class="bi bi-trophy"></i> Top Usuários</h5>
                            <div id="topUsersList"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODALS (mantidos iguais) -->
    <!-- Editar Usuário -->
    <div class="modal fade" id="editUserModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Usuário</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editUserId" />
                    <div class="mb-3">
                        <label class="form-label">Nome</label>
                        <input type="text" class="form-control" id="editUserName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="editUserEmail" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Departamento</label>
                        <select class="form-select" id="editUserDepartamento"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="salvarUsuario()">
                        <i class="bi bi-check-circle"></i> Salvar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Alterar Senha -->
    <div class="modal fade" id="alterarSenhaModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Alterar Senha do Usuário</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="senhaUserId" />
                    <p style="color:#b9bde3;margin-bottom:18px">Alterando senha de: <strong id="senhaUserName"></strong></p>
                    <div class="mb-3">
                        <label class="form-label">Nova Senha</label>
                        <input type="password" class="form-control" id="novaSenha" placeholder="Mínimo 6 caracteres" minlength="6" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirmar Senha</label>
                        <input type="password" class="form-control" id="confirmarSenha" placeholder="Digite novamente" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="salvarSenha()">
                        <i class="bi bi-key"></i> Alterar Senha
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Ver Tickets do Usuário -->
    <div class="modal fade" id="userTicketsModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Tickets do Usuário</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="userTicketsContent">
                        <div class="loading-spinner"><div class="spinner-border text-primary" role="status"></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alterar Cargo -->
    <div class="modal fade" id="alterarCargoModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Alterar Cargo do Usuário</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="cargoUserId" />
                    <p style="color:#b9bde3;margin-bottom:16px">Alterando cargo de: <strong id="cargoUserName"></strong></p>
                    <div class="mb-3">
                        <label class="form-label">Novo Cargo</label>
                        <select class="form-select" id="novoCargo">
                            <option value="Solicitante">Solicitante (Usuário Normal)</option>
                            <option value="Tecnico">Técnico</option>
                            <option value="Gerente">Gerente (Administrador)</option>
                        </select>
                    </div>
                    <div class="alert alert-warning" style="background:rgba(251,191,36,.1);border:1px solid #fbbf24;color:#fbbf24;border-radius:12px">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Atenção:</strong> Ao promover para Técnico/Gerente, o usuário terá acesso ao painel administrativo.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="salvarCargo()">
                        <i class="bi bi-shield-check"></i> Alterar Cargo
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- JS (mantido igual ao anterior) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let departamentos = [];
        let usuarios = [];
        let tickets = [];
        let dashboard = {};

        window.addEventListener('load', () => {
            carregarDashboard();
            carregarDepartamentos();
            carregarTickets();
            carregarUsuarios();
        });

        function mudarTab(evt, tabName) {
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

            if (evt && evt.currentTarget) evt.currentTarget.classList.add('active');
            const tab = document.getElementById(`tab-${tabName}`);
            if (tab) tab.classList.add('active');

            if (tabName === 'relatorios') { carregarRelatorios(); }
            else if (tabName === 'tickets') { carregarTickets(); }
            else if (tabName === 'usuarios') { carregarUsuarios(); }
        }

        async function carregarDashboard() {
            try {
                const r = await fetch('/Gerente/ObterDashboard');
                dashboard = await r.json();
                document.getElementById('statUsuarios').textContent = dashboard.totalUsuarios || 0;
                document.getElementById('statTicketsAbertos').textContent = dashboard.ticketsAbertos || 0;
                document.getElementById('statTicketsResolvidos').textContent = dashboard.ticketsResolvidos || 0;
                document.getElementById('statChats').textContent = dashboard.totalChats || 0;
                document.getElementById('statResolvidosHoje').textContent = dashboard.ticketsResolvidosHoje || 0;
                document.getElementById('statChatsResolvidos').textContent = dashboard.chatsResolvidos || 0;
            } catch (e) { console.error('Dashboard:', e); }
        }

        async function carregarTickets() {
            try {
                const r = await fetch('/Gerente/ObterTodosTickets');
                tickets = await r.json();
                const tbody = document.getElementById('ticketsTableBody');

                if (!tickets.length) {
                    tbody.innerHTML = `<tr><td colspan="6"><div class="empty-state"><i class="bi bi-ticket-detailed"></i><h4 style="color:#fff;font-weight:800">Nenhum ticket encontrado</h4><p>Quando houver tickets, eles aparecerão aqui</p></div></td></tr>`;
                    return;
                }

                tbody.innerHTML = '';
                tickets.forEach(t => {
                    const dataAbertura = new Date(t.dataAbertura).toLocaleDateString('pt-BR');
                    const statusClass = t.idStatus === 1 ? 'warning' : 'success';
                    const tr = document.createElement('tr');
                    tr.innerHTML = `<td><strong>#${t.id}</strong></td><td>${t.nomeSolicitante}</td><td><span class="badge badge-primary">${t.departamento}</span></td><td style="max-width:420px"><div class="text-truncate">${t.descricaoProblema}</div></td><td><span class="badge badge-${statusClass}">${t.status}</span></td><td>${dataAbertura}</td>`;
                    tbody.appendChild(tr);
                });
            } catch (e) {
                console.error('Tickets:', e);
                document.getElementById('ticketsTableBody').innerHTML = `<tr><td colspan="6" class="text-center text-danger">Erro ao carregar tickets</td></tr>`;
            }
        }

        async function carregarDepartamentos() {
            try { const r = await fetch('/Gerente/ObterDepartamentos'); departamentos = await r.json(); }
            catch (e) { console.error('Departamentos:', e); }
        }

        async function carregarUsuarios() {
            try {
                const r = await fetch('/Gerente/ObterUsuarios');
                usuarios = await r.json();
                const tbody = document.getElementById('usersTableBody');

                if (!usuarios.length) {
                    tbody.innerHTML = `<tr><td colspan="7"><div class="empty-state"><i class="bi bi-people"></i><h4 style="color:#fff;font-weight:800">Nenhum usuário cadastrado</h4></div></td></tr>`;
                    return;
                }

                tbody.innerHTML = '';
                usuarios.forEach(u => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `<td><strong>${u.nome}</strong></td><td>${u.email}</td><td><span class="badge badge-primary">${u.departamento}</span></td><td><span class="badge badge-success">${u.totalTickets}</span></td><td><span class="badge badge-warning">${u.ticketsAbertos}</span></td><td><span class="badge badge-purple">${u.totalChats}</span></td><td class="text-center"><div class="d-inline-flex"><button class="btn-icon" onclick="editarUsuario(${u.id})" title="Editar"><i class="bi bi-pencil"></i></button><button class="btn-icon" onclick="abrirAlterarCargo(${u.id}, '${u.nome}')" title="Alterar Cargo"><i class="bi bi-shield-check"></i></button><button class="btn-icon" onclick="abrirAlterarSenha(${u.id}, '${u.nome}')" title="Alterar Senha"><i class="bi bi-key"></i></button><button class="btn-icon" onclick="verTicketsUsuario(${u.id}, '${u.nome}')" title="Ver Tickets"><i class="bi bi-ticket-detailed"></i></button><button class="btn-icon danger" onclick="excluirUsuario(${u.id}, '${u.nome}')" title="Excluir"><i class="bi bi-trash"></i></button></div></td>`;
                    tbody.appendChild(tr);
                });
            } catch (e) {
                console.error('Usuários:', e);
                document.getElementById('usersTableBody').innerHTML = `<tr><td colspan="7" class="text-center text-danger">Erro ao carregar usuários</td></tr>`;
            }
        }

        async function editarUsuario(usuarioId) {
            try {
                const r = await fetch(`/Gerente/ObterUsuario/${usuarioId}`);
                const u = await r.json();
                document.getElementById('editUserId').value = u.id;
                document.getElementById('editUserName').value = u.nome;
                document.getElementById('editUserEmail').value = u.email;
                const sel = document.getElementById('editUserDepartamento');
                sel.innerHTML = '';
                departamentos.forEach(d => { const o = document.createElement('option'); o.value = d.id; o.textContent = d.nome; o.selected = d.id === u.idDepartamento; sel.appendChild(o); });
                new bootstrap.Modal(document.getElementById('editUserModal')).show();
            } catch (e) { console.error('Obter usuário:', e); alert('Erro ao carregar dados do usuário'); }
        }

        async function salvarUsuario() {
            const usuarioId = document.getElementById('editUserId').value;
            const nome = document.getElementById('editUserName').value.trim();
            const email = document.getElementById('editUserEmail').value.trim();
            const idDepartamento = parseInt(document.getElementById('editUserDepartamento').value);
            if (!nome || !email) { alert('Preencha todos os campos obrigatórios'); return; }
            try {
                const r = await fetch('/Gerente/AtualizarUsuario', { method: 'PUT', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ usuarioId: parseInt(usuarioId), nome, email, idDepartamento }) });
                const data = await r.json();
                if (data.sucesso) { bootstrap.Modal.getInstance(document.getElementById('editUserModal')).hide(); mostrarNotificacao('Usuário atualizado com sucesso!', 'success'); await carregarUsuarios(); await carregarDashboard(); } else { alert('Erro ao atualizar usuário'); }
            } catch (e) { console.error('Salvar usuário:', e); alert('Erro ao conectar com o servidor'); }
        }

        function abrirAlterarSenha(usuarioId, nomeUsuario) {
            document.getElementById('senhaUserId').value = usuarioId;
            document.getElementById('senhaUserName').textContent = nomeUsuario;
            document.getElementById('novaSenha').value = '';
            document.getElementById('confirmarSenha').value = '';
            new bootstrap.Modal(document.getElementById('alterarSenhaModal')).show();
        }

        async function salvarSenha() {
            const usuarioId = document.getElementById('senhaUserId').value;
            const novaSenha = document.getElementById('novaSenha').value;
            const confirmarSenha = document.getElementById('confirmarSenha').value;
            if (!novaSenha || novaSenha.length < 6) { alert('A senha deve ter no mínimo 6 caracteres'); return; }
            if (novaSenha !== confirmarSenha) { alert('As senhas não coincidem'); return; }
            try {
                const r = await fetch('/Gerente/AlterarSenha', { method: 'PUT', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ usuarioId: parseInt(usuarioId), novaSenha }) });
                const data = await r.json();
                if (data.sucesso) { bootstrap.Modal.getInstance(document.getElementById('alterarSenhaModal')).hide(); mostrarNotificacao('Senha alterada com sucesso!', 'success'); } else { alert('Erro ao alterar senha'); }
            } catch (e) { console.error('Alterar senha:', e); alert('Erro ao conectar com o servidor'); }
        }

        async function excluirUsuario(usuarioId, nomeUsuario) {
            if (!confirm(`Tem certeza que deseja excluir o usuário "${nomeUsuario}"?\n\nISTO IRÁ DELETAR:\n✗ Todos os chats\n✗ Todos os tickets\n✗ Todo o histórico\n\nEsta ação não pode ser desfeita!`)) return;
            try {
                const r = await fetch(`/Gerente/ExcluirUsuario/${usuarioId}`, { method: 'DELETE' });
                const data = await r.json();
                if (data.sucesso) { mostrarNotificacao('Usuário excluído com sucesso!', 'success'); await carregarUsuarios(); await carregarDashboard(); } else { alert('Erro ao excluir usuário'); }
            } catch (e) { console.error('Excluir usuário:', e); alert('Erro ao conectar com o servidor'); }
        }

        async function verTicketsUsuario(usuarioId, nomeUsuario) {
            try {
                const r = await fetch(`/Gerente/ObterTicketsUsuario/${usuarioId}`);
                const lista = await r.json();
                const content = document.getElementById('userTicketsContent');
                const modal = new bootstrap.Modal(document.getElementById('userTicketsModal'));
                if (!lista.length) {
                    content.innerHTML = `<div class="empty-state"><i class="bi bi-ticket-detailed"></i><h4 style="color:#fff;font-weight:800">Nenhum ticket encontrado</h4><p>O usuário ${nomeUsuario} não possui tickets</p></div>`;
                } else {
                    let html = `<h6 class="mb-3">Tickets de <strong>${nomeUsuario}</strong></h6><div class="list-group">`;
                    lista.forEach(t => {
                        const dataAbertura = new Date(t.dataAbertura).toLocaleDateString('pt-BR');
                        const statusClass = t.idStatus === 1 ? 'warning' : 'success';
                        html += `<div class="list-group-item" style="background:var(--darker-bg);border:1px solid var(--panel-border);margin-bottom:12px;border-radius:12px;padding:18px"><div class="d-flex justify-content-between align-items-center mb-2"><h6 class="mb-0" style="font-weight:800">Ticket #${t.id}</h6><span class="badge badge-${statusClass}">${t.status}</span></div><p class="mb-2" style="color:#b9bde3">${t.descricaoProblema}</p><small class="text-muted"><i class="bi bi-calendar"></i> ${dataAbertura}</small></div>`;
                    });
                    html += `</div>`;
                    content.innerHTML = html;
                }
                modal.show();
            } catch (e) { console.error('Tickets usuário:', e); alert('Erro ao carregar tickets do usuário'); }
        }

        async function carregarRelatorios() {
            try {
                const r = await fetch('/Gerente/ObterRelatorioDepartamentos');
                const relatorio = await r.json();
                const chartDiv = document.getElementById('departamentosChart');
                if (!relatorio.length) { chartDiv.innerHTML = '<div class="empty-state"><p>Nenhum dado disponível</p></div>'; }
                else {
                    let html = '<div class="table-responsive"><table class="table table-sm table-hover"><thead><tr><th>Departamento</th><th>Usuários</th><th>Tickets</th><th>Abertos</th><th>Resolvidos</th></tr></thead><tbody>';
                    relatorio.forEach(d => { html += `<tr><td><strong>${d.departamento}</strong></td><td><span class="badge badge-primary">${d.totalUsuarios}</span></td><td><span class="badge badge-success">${d.totalTickets}</span></td><td><span class="badge badge-warning">${d.ticketsAbertos}</span></td><td><span class="badge badge-success">${d.ticketsResolvidos}</span></td></tr>`; });
                    html += '</tbody></table></div>';
                    chartDiv.innerHTML = html;
                }
                const topUsersList = document.getElementById('topUsersList');
                if (dashboard.topUsuarios && dashboard.topUsuarios.length) {
                    topUsersList.innerHTML = '';
                    dashboard.topUsuarios.forEach((u, idx) => {
                        const row = document.createElement('div');
                        row.style.cssText = 'display:flex;justify-content:space-between;padding:14px;background:var(--darker-bg);border-radius:12px;margin-bottom:12px;align-items:center;border:1px solid var(--panel-border)';
                        row.innerHTML = `<div style="display:flex;align-items:center;gap:14px"><div style="width:40px;height:40px;background:linear-gradient(135deg,var(--primary-blue),var(--primary-purple));border-radius:50%;display:flex;align-items:center;justify-content:center;font-weight:800;font-size:18px">${idx + 1}</div><strong>${u.nome}</strong></div><span class="badge badge-warning" style="font-size:13px">${u.totalTickets} tickets</span>`;
                        topUsersList.appendChild(row);
                    });
                } else { topUsersList.innerHTML = '<div class="empty-state"><p>Nenhum dado disponível</p></div>'; }
            } catch (e) { console.error('Relatórios:', e); }
        }

        function mostrarNotificacao(msg, tipo = 'info') {
            const cores = { success: 'linear-gradient(135deg,#10b981,#059669)', warning: 'linear-gradient(135deg,#fbbf24,#f59e0b)', info: 'linear-gradient(135deg,#3b82f6,#2563eb)' };
            const n = document.createElement('div');
            n.style.cssText = `position:fixed;top:20px;right:20px;background:${cores[tipo]};padding:16px 24px;border-radius:14px;color:#fff;font-weight:800;z-index:10000;animation:slideInRight .3s ease-out;max-width:420px;box-shadow:0 10px 30px rgba(0,0,0,.4)`;
            n.innerHTML = `<i class="bi bi-check-circle"></i> ${msg}`;
            document.body.appendChild(n);
            setTimeout(() => { n.style.animation = 'slideOutRight .3s ease-out'; setTimeout(() => n.remove(), 300); }, 3800);
        }

        setInterval(carregarDashboard, 30000);

        function abrirAlterarCargo(usuarioId, nomeUsuario) {
            document.getElementById('cargoUserId').value = usuarioId;
            document.getElementById('cargoUserName').textContent = nomeUsuario;
            document.getElementById('novoCargo').value = 'Solicitante';
            new bootstrap.Modal(document.getElementById('alterarCargoModal')).show();
        }

        async function salvarCargo() {
            const usuarioId = document.getElementById('cargoUserId').value;
            const novoCargo = document.getElementById('novoCargo').value;
            if (!novoCargo) { alert('Selecione um cargo válido'); return; }
            const cargoTexto = { 'Solicitante': 'Usuário Normal', 'Tecnico': 'Técnico', 'Gerente': 'Gerente (Administrador)' };
            if (!confirm(`Tem certeza que deseja alterar o cargo para ${cargoTexto[novoCargo]}?`)) return;
            try {
                const r = await fetch('/Gerente/AlterarCargo', { method: 'PUT', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ usuarioId: parseInt(usuarioId), cargo: novoCargo }) });
                const data = await r.json();
                if (data.sucesso) { bootstrap.Modal.getInstance(document.getElementById('alterarCargoModal')).hide(); mostrarNotificacao(`Cargo alterado para ${cargoTexto[novoCargo]} com sucesso!`, 'success'); await carregarUsuarios(); await carregarDashboard(); } else { alert('Erro ao alterar cargo'); }
            } catch (e) { console.error('Alterar cargo:', e); alert('Erro ao conectar com o servidor'); }
        }
    </script>
</body>
</html>