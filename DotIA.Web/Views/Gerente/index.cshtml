                    <!-- Campo de Resposta -->
                    <div class="mb-3">
                        <label class="form-label">Sua Resposta</label>
                        <textarea class="form-control" id="ticketResposta" rows="6" placeholder="Digite sua resposta ao cliente..."></textarea>
