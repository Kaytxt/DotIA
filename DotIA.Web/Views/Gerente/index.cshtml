                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="salvarSenha()">
                        <i class="bi bi-key"></i> Alterar Senha
                    </button>
                </div>
            </div>
        </div>
