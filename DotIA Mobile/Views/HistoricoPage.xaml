<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotIA_Mobile.Views.HistoricoPage"
             Title="HistÃ³rico de Conversas"
             BackgroundColor="#f8fafc">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="#2563eb" 
               CornerRadius="0" 
               Padding="20"
               HasShadow="True">
            <Label Text="ðŸ“š Suas Conversas" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="White"
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Lista de conversas -->
        <ScrollView Grid.Row="1" Padding="15">
            <VerticalStackLayout x:Name="historicoLayout" Spacing="15">
                
                <!-- ActivityIndicator -->
                <ActivityIndicator x:Name="loadingIndicator"
                                   IsRunning="True"
                                   IsVisible="True"
                                   Color="#2563eb"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Margin="0,50,0,0"/>

                <!-- Mensagem quando vazio -->
                <Label x:Name="lblVazio"
                       Text="Nenhuma conversa ainda"
                       FontSize="16"
                       TextColor="#6b7280"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,50,0,0"
                       IsVisible="False"/>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
