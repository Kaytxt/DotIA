<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotIA_Mobile.MainPage"
             Title="Login - DotIA">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <!-- Cabeçalho -->
            <Label Text="DotIA" 
                   FontSize="32" 
                   TextColor="#2563eb" 
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Label Text="Sistema Inteligente de Suporte" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   TextColor="#6b7280"/>

            <!-- Formulário Login -->
            <Frame BackgroundColor="#f8fafc" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Login" FontSize="20" FontAttributes="Bold" TextColor="#1e293b"/>

                    <Entry x:Name="txtEmail" 
                           Placeholder="seu@email.com" 
                           Keyboard="Email"
                           BackgroundColor="White"/>

                    <Entry x:Name="txtSenha" 
                           Placeholder="Sua senha" 
                           IsPassword="True"
                           BackgroundColor="White"/>

                    <Button Text="Entrar" 
                            Clicked="OnLoginClicked" 
                            BackgroundColor="#2563eb"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="50"/>

                    <Label x:Name="lblMensagem" 
                           TextColor="Red" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>