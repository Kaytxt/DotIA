<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:DotIA.Mobile.Converters"
             x:Class="DotIA.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:NotNullConverter x:Key="NotNullConverter" />
            <converters:StringEqualConverter x:Key="StringEqualConverter" />
            <converters:AbaColorConverter x:Key="AbaColorConverter" />
            <converters:IsZeroConverter x:Key="IsZeroConverter" />
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converters:IntEqualsConverter x:Key="IntEqualsConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
