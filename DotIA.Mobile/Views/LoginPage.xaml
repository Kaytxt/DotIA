<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DotIA.Mobile.ViewModels"
             x:Class="DotIA.Mobile.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Background}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Logo/Título -->
            <Label Text="DotIA"
                   FontSize="52"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Secondary}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <Label Text="Sistema Inteligente de Suporte"
                   FontSize="16"
                   TextColor="{StaticResource TextTertiary}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,40"/>

            <!-- Email -->
            <Border BackgroundColor="{StaticResource BackgroundDark}"
                    StrokeShape="RoundRectangle 15"
                    Stroke="{StaticResource BorderColor}"
                    StrokeThickness="2"
                    Padding="16">
                <Entry Placeholder="seu@email.com"
                       PlaceholderColor="{StaticResource TextMuted}"
                       TextColor="{StaticResource TextSecondary}"
                       Text="{Binding Email}"
                       Keyboard="Email"
                       FontSize="15"/>
            </Border>

            <!-- Senha -->
            <Border BackgroundColor="{StaticResource BackgroundDark}"
                    StrokeShape="RoundRectangle 15"
                    Stroke="{StaticResource BorderColor}"
                    StrokeThickness="2"
                    Padding="16">
                <Entry Placeholder="••••••••"
                       PlaceholderColor="{StaticResource TextMuted}"
                       TextColor="{StaticResource TextSecondary}"
                       Text="{Binding Senha}"
                       IsPassword="True"
                       FontSize="15"/>
            </Border>

            <!-- Mensagem de Erro -->
            <Border BackgroundColor="#ef444422"
                    Stroke="{StaticResource Error}"
                    StrokeShape="RoundRectangle 15"
                    Padding="15"
                    IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}">
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#fecaca"
                       FontSize="14"
                       HorizontalOptions="Center"/>
            </Border>

            <!-- Botão Login -->
            <Border StrokeShape="RoundRectangle 15" StrokeThickness="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                        <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Button Text="ENTRAR"
                        Command="{Binding LoginCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="55"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>
            </Border>

            <!-- Indicador de Loading -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Color="#7c3aed"
                              HeightRequest="40"/>

            <!-- Divider -->
            <Grid ColumnDefinitions="*,Auto,*" Margin="0,20,0,20" ColumnSpacing="15">
                <BoxView Grid.Column="0" HeightRequest="1" Color="{StaticResource BorderColor}" VerticalOptions="Center" Opacity="0.3"/>
                <Label Grid.Column="1" Text="OU" TextColor="{StaticResource TextTertiary}" FontSize="13"/>
                <BoxView Grid.Column="2" HeightRequest="1" Color="{StaticResource BorderColor}" VerticalOptions="Center" Opacity="0.3"/>
            </Grid>

            <!-- Botão Criar Conta -->
            <Border BackgroundColor="Transparent"
                    Stroke="{StaticResource BorderColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    Margin="0,-10,0,0">
                <Button Text="CRIAR NOVA CONTA"
                        Command="{Binding NavigateToRegistroCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource TextSecondary}"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="55"/>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
