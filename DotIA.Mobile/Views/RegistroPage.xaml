<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DotIA.Mobile.ViewModels"
             x:Class="DotIA.Mobile.Views.RegistroPage"
             x:DataType="viewmodels:RegistroViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Background}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="18">

            <!-- Cabeçalho -->
            <Label Text="Criar Conta"
                   FontSize="42"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Secondary}"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <Label Text="Preencha os dados abaixo"
                   FontSize="15"
                   TextColor="{StaticResource TextTertiary}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30"/>

            <!-- Nome -->
            <Border BackgroundColor="{StaticResource BackgroundDark}"
                    StrokeShape="RoundRectangle 15"
                    Stroke="{StaticResource BorderColor}"
                    StrokeThickness="2"
                    Padding="16">
                <Entry Placeholder="Nome Completo"
                       PlaceholderColor="{StaticResource TextMuted}"
                       TextColor="{StaticResource TextSecondary}"
                       Text="{Binding Nome}"
                       FontSize="15"/>
            </Border>

            <!-- Email -->
            <Border BackgroundColor="{StaticResource BackgroundDark}"
                    StrokeShape="RoundRectangle 15"
                    Stroke="{StaticResource BorderColor}"
                    StrokeThickness="2"
                    Padding="16">
                <Entry Placeholder="seu@email.com"
                       PlaceholderColor="{StaticResource TextMuted}"
                       TextColor="{StaticResource TextSecondary}"
                       Text="{Binding Email}"
                       Keyboard="Email"
                       FontSize="15"/>
            </Border>

            <!-- Departamento -->
            <Border BackgroundColor="{StaticResource BackgroundDark}"
                    StrokeShape="RoundRectangle 15"
                    Stroke="{StaticResource BorderColor}"
                    StrokeThickness="2"
                    Padding="16,12">
                <Picker Title="Selecione o Departamento"
                        TitleColor="{StaticResource TextMuted}"
                        TextColor="{StaticResource TextSecondary}"
                        ItemsSource="{Binding Departamentos}"
                        ItemDisplayBinding="{Binding Nome}"
                        SelectedItem="{Binding DepartamentoSelecionado}"
                        FontSize="15"/>
            </Border>

            <!-- Senha -->
            <Border BackgroundColor="{StaticResource BackgroundDark}"
                    StrokeShape="RoundRectangle 15"
                    Stroke="{StaticResource BorderColor}"
                    StrokeThickness="2"
                    Padding="16">
                <Entry Placeholder="Senha (mínimo 6 caracteres)"
                       PlaceholderColor="{StaticResource TextMuted}"
                       TextColor="{StaticResource TextSecondary}"
                       Text="{Binding Senha}"
                       IsPassword="True"
                       FontSize="15"/>
            </Border>

            <!-- Confirmação de Senha -->
            <Border BackgroundColor="{StaticResource BackgroundDark}"
                    StrokeShape="RoundRectangle 15"
                    Stroke="{StaticResource BorderColor}"
                    StrokeThickness="2"
                    Padding="16">
                <Entry Placeholder="Confirmar Senha"
                       PlaceholderColor="{StaticResource TextMuted}"
                       TextColor="{StaticResource TextSecondary}"
                       Text="{Binding ConfirmacaoSenha}"
                       IsPassword="True"
                       FontSize="15"/>
            </Border>

            <!-- Mensagens -->
            <Border BackgroundColor="#ef444422"
                    Stroke="{StaticResource Error}"
                    StrokeShape="RoundRectangle 15"
                    Padding="15"
                    IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}">
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#fecaca"
                       FontSize="14"
                       HorizontalOptions="Center"/>
            </Border>

            <Border BackgroundColor="#10b98122"
                    Stroke="{StaticResource Success}"
                    StrokeShape="RoundRectangle 15"
                    Padding="15"
                    IsVisible="{Binding SuccessMessage, Converter={StaticResource StringNotEmptyConverter}}">
                <Label Text="{Binding SuccessMessage}"
                       TextColor="#6ee7b7"
                       FontSize="14"
                       HorizontalOptions="Center"/>
            </Border>

            <!-- Botão Cadastrar -->
            <Border StrokeShape="RoundRectangle 15" StrokeThickness="0" Margin="0,10,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                        <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Button Text="CADASTRAR"
                        Command="{Binding RegistrarCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="55"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>
            </Border>

            <!-- Loading -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Color="#10b981"
                              HeightRequest="40"/>

            <!-- Link para Login -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,20">
                <Label Text="Já tem conta?"
                       TextColor="{StaticResource TextTertiary}"
                       FontSize="14"/>
                <Label Text="Fazer Login"
                       TextColor="{StaticResource Secondary}"
                       FontSize="14"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
