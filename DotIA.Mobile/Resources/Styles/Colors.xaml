<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores do tema (idênticas à versão Web) -->
    <!-- Cores Primárias (Roxo/Violeta) -->
    <Color x:Key="Primary">#8d4bff</Color>
    <Color x:Key="Secondary">#a855f7</Color>
    <Color x:Key="PrimaryLight">#ec4899</Color>

    <!-- Fundos (Tom roxo escuro) -->
    <Color x:Key="Background">#1a132f</Color>
    <Color x:Key="BackgroundDark">#140e25</Color>
    <Color x:Key="BackgroundLight">#2c204d</Color>
    <Color x:Key="CardBackground">#2c204d</Color>

    <!-- Texto -->
    <Color x:Key="TextPrimary">#ffffff</Color>
    <Color x:Key="TextSecondary">#e5e7eb</Color>
    <Color x:Key="TextTertiary">#9ca3af</Color>
    <Color x:Key="TextMuted">#6b7280</Color>

    <!-- Estados -->
    <Color x:Key="Success">#10b981</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="Error">#dc2626</Color>
    <Color x:Key="Info">#3b82f6</Color>

    <!-- Bordas -->
    <Color x:Key="BorderColor">#8d4bff</Color>
    <Color x:Key="BorderColorLight">#a855f7</Color>

</ResourceDictionary>
